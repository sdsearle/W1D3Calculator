<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.spenc.w1d3calculator.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvAnswer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="48sp"
            android:text="0"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/bin1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="updateTextAnswer"
            android:text="1" />

        <Button
            android:id="@+id/bin2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/bin1"
            android:onClick="updateTextAnswer"
            android:text="2" />

        <Button
            android:id="@+id/bin3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/bin2"
            android:onClick="updateTextAnswer"
            android:text="3" />

        <Button
            android:id="@+id/bin4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/bin1"
            android:onClick="updateTextAnswer"
            android:text="4" />

        <Button
            android:id="@+id/bin5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/bin1"
            android:layout_toRightOf="@id/bin4"
            android:onClick="updateTextAnswer"
            android:text="5" />

        <Button
            android:id="@+id/bin6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/bin1"
            android:layout_toRightOf="@id/bin5"
            android:onClick="updateTextAnswer"
            android:text="6" />

        <Button
            android:id="@+id/bin7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/bin4"
            android:onClick="updateTextAnswer"
            android:text="7" />

        <Button
            android:id="@+id/bin8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/bin4"
            android:layout_toRightOf="@id/bin7"
            android:onClick="updateTextAnswer"
            android:text="8" />

        <Button
            android:id="@+id/bin9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/bin4"
            android:layout_toRightOf="@id/bin8"
            android:onClick="updateTextAnswer"
            android:text="9" />

        <Button
            android:id="@+id/bin0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/bin8"
            android:layout_toRightOf="@id/bin1"
            android:onClick="updateTextAnswer"
            android:text="0" />

        <Button
            android:id="@+id/binMinus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/bin1"
            android:layout_toRightOf="@id/bin6"
            android:onClick="updateTextAnswer"
            android:text="-" />

        <Button
            android:id="@+id/binPlus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/bin3"
            android:onClick="updateTextAnswer"
            android:text="+" />

        <Button
            android:id="@+id/binMultiply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/bin4"
            android:layout_toRightOf="@id/bin9"
            android:onClick="updateTextAnswer"
            android:text="*" />

        <Button
            android:id="@+id/binClear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/bin7"
            android:onClick="updateTextAnswer"
            android:text="Clear" />

        <Button
            android:id="@+id/binEnter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/bin9"
            android:layout_toRightOf="@id/bin0"
            android:onClick="updateTextAnswer"
            android:text="=" />

        <Button
            android:id="@+id/binDivide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/bin8"
            android:layout_toRightOf="@id/binEnter"
            android:onClick="updateTextAnswer"
            android:text="/" />
        <Button
            android:id="@+id/binDecimal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/binClear"
            android:onClick="updateTextAnswer"
            android:text="." />
        <Button
            android:id="@+id/binSign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/bin0"
            android:layout_toRightOf="@id/binDecimal"
            android:onClick="updateTextAnswer"
            android:text="+/-" />




    </RelativeLayout>

</LinearLayout>
